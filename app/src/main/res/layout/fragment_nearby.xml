<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/btm_sheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/slidingup_rounded"
    android:elevation="4dp"
    app:behavior_peekHeight="40dp">
    <!--app:layout_behavior="android.support.design.widget.BottomSheetBehavior"-->


    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#bbb"
        android:layout_toRightOf="@+id/nearby"/>

    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#bbb"
        android:layout_toLeftOf="@+id/nearby"/>

    <TextView
        android:id="@+id/nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Shop Near By"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detToko"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nearby"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>